# ========== ENVIRONMENT ==========
PORT=5000
NODE_ENV=development

# ========== DATABASE ==========
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=pharmacy_erp
DB_POOL_SIZE=20

# ========== JWT & TOKEN MANAGEMENT ==========
# Generate strong secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_strong_random_32_char_string_minimum
REFRESH_TOKEN_SECRET=your_another_strong_random_32_char_string
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
TOKEN_REFRESH_THRESHOLD=5m
JWT_ALGORITHM=HS256

# ========== AUTHENTICATION ==========
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# ========== GOOGLE OAUTH ==========
GOOGLE_CLIENT_ID=your_google_client_id_from_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_console

# ========== OTP CONFIGURATION ==========
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5

# ========== EMAIL CONFIGURATION ==========
# Gmail: Use App Password, not account password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@pharmacy.local
SMTP_SECURE=false
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=1000

# ========== RATE LIMITING ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========== CORS & SECURITY ==========
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ========== LOGGING ==========
LOG_LEVEL=info

# ========== SMS/WhatsApp (TWILIO) ==========
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
